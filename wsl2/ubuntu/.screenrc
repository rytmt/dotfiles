# general
startup_message off
escape ^Tt
autodetach on
#hardstatus alwayslastline  "%{=d kW}%-w%{=u kY}%n %t%{=d kW}%+w %=%{= W}%H %{= W}%m-%d %c"
#caption always '%?%F%{=r kb}%:%{=u kb}%?%n %f %t%='
caption always "%{kY} %n%f* %t %?%{YR}%{kR} %u %{Rw}%:%{Yw}%?%?%F%{.w}%:%{.w}%?%="
#hardstatus alwayslastline "%{bk} %S %{kb} $LOGNAME %{bk} %H %?%{kb}%{kY} %-Lw%{Yk}%:%{Yb}%{Yk}%?%{Yk} %n%f* %t %{kY}%+Lw %-="
hardstatus alwayslastline "%{wk} 20%y-%m-%d %c %{kw} $LOGNAME %{wk} %H %?%{kw}%{kY} %-Lw%{Yk}%:%{Yw}%{Yk}%?%{Yk} %n%f* %t %{kY}%+Lw %-="
defbce on
term xterm-256color
altscreen on
defscrollback 10000
vbell on
verbose on

# keybind
bind r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^] command
bind -c resize j eval 'resize +1' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'
bindkey -m "^[j" stuff 10j
bindkey -m "^[k" stuff 10k
bindkey -m "^[h" stuff 10h
bindkey -m "^[l" stuff 10l
bindkey -m ^Y stuff ^B/http^M
markkeys 0=^a:$=^e
bindkey -m ^[b stuff B
bindkey -m ^[f stuff E
bindkey -m ^g stuff !
bindkey -m "^[[1~" stuff 0
bindkey -m "^[[4~" stuff $
bindkey -m "^[OH" stuff 0
bindkey -m "^[OF" stuff $
bindkey -m "^[[H" stuff 0
bindkey -m "^[[F" stuff $
bindkey -m ' ' eval 'stuff \040' 'writebuf' 'exec sh -c "cat /tmp/screen-exchange | iconv -c -t sjis | clip.exe"'
bindkey -m Y   eval 'stuff Y'    'writebuf' 'exec sh -c "cat /tmp/screen-exchange | iconv -c -t sjis | clip.exe"'
bindkey -m W   eval 'stuff W'    'writebuf' 'exec sh -c "cat /tmp/screen-exchange | iconv -c -t sjis | clip.exe"'

# start at window 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# log
#logfile "/var/log/screen/screen-%Y%m%d-%n.log"
logfile "$HOME/log/screen/screen.%H.%Y%m%d-%02c:%s-%n.%t.log"
logtstamp on
logtstamp string "\n-- SCREEN [%Y/%m/%d %02c:%s] %n:%t --\n"
deflog on
