" Not compatible with vi
set nocompatible


" Encode
" ------
set encoding=UTF-8
set fileencoding=UTF-8
set fileencodings=utf-8,cp932,euc-jp,utf-16le
set fileformat=unix
set fileformats=unix,dos
set termencoding=UTF-8


" File
" ----
set hidden
set autoread
set nobackup
set noswapfile
"set noundofile
"set backupdir=
"set undodir=
"set directory=
set viminfo=


" Search
" ------
set incsearch
set hlsearch
set smartcase
set ignorecase
set wrapscan


" Input
" -----
set cindent
set shiftwidth=4
set tabstop=4
set expandtab
set softtabstop=4
set backspace=indent,eol,start
set whichwrap=b,s,h,l,<,>,[,]
set textwidth=0
set formatoptions=q
set nrformats=
nnoremap x "_x
nnoremap Y v$hy
nnoremap <C-s> :w<CR>
nnoremap <C-q> :q<CR>
nnoremap <S-u>e :Hexplore "%:h"<CR>
inoremap <C-a> <Home>
inoremap <C-e> <End>
inoremap <C-u> <Esc>ui
inoremap <C-r> <Esc><C-r>i
inoremap <C-s> <Esc>:w<CR>
inoremap <C-q> <Esc>:bw!<CR>
cnoremap fpath :echo expand("%:p")<CR>
cnoremap <C-a> <Home>
cnoremap <C-e> <End>


" Display
" -------
set background=dark
colorscheme darkblue
syntax on
set number
set title
set showcmd
set cmdheight=2
set ruler
set showmatch
set list
set wrap
set cursorline
set matchtime=3
set laststatus=2
set visualbell t_vb=
highlight Normal ctermbg=none
highlight NonText ctermbg=none
highlight LineNr ctermbg=none
highlight Folded ctermbg=none
highlight EndOfBuffer ctermbg=none
highlight CursorLine cterm=NONE ctermbg=238
